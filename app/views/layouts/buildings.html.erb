<% content_for :body do %>

  <header>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <h1><a href="/"><%= t(:app_name) %></a></h1>
        </div>
      </div>
    </div>
  </header>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
