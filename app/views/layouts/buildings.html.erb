  <footer>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <p>
            <%= link_to 'Sobre', about_url %> | <a href="http://improve.madeincoimbra.org">Made in Improve Coimbra</a>
          </p>
