<!DOCTYPE html>
<html>
<head>
  <title><%= t(:app_name) %></title>
  <meta name="description" content="<%= t(:app_description) %>">
  <meta name="keywords" content="coimbra,centro,histórico,edifícios">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>

  <meta property="og:title" content="<%= t(:app_name) %> - <%= t(:app_description) %>"/>
  <meta property="og:description" content="<% if content_for? :description %><%= yield :description %><% else %><%= t(:app_description) %><% end %>"/>
  <meta property="og:image" content="<% if content_for? :building_image %><%= yield :building_image %><% end %>"/>
  <meta property="og:url" content="http://<%= request.host+request.fullpath %>"/>
  <meta property="og:type" content="website"/>

  <link rel="icon" type="image/png" href="<%= image_path('/img/favicon.png') %>">
  <link rel="apple-touch-icon-precomposed" href="<%= image_path('/img/b-medium.png') %>" />

</head>
<body>
  <% if Rails.env == 'production' %>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= ENV["GOOGLE_ANALYTICS_ID"] %>']);
      _gaq.push(['_trackPageview']);

      (function () {
          var ga = document.createElement('script');
          ga.type = 'text/javascript';
          ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0];
          s.parentNode.insertBefore(ga, s);
      })();
    </script>
  <% end %>

  <%= yield :body %>

  <%= javascript_include_tag 'application' %>
  <%= yield :scripts %>
</body>
</html>
