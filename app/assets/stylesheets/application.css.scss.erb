@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,700);

$main_color: #ED764B;
$main_color_light: #FF6600;
$background_color: #FFF2AF;

body {
  font-family: 'Open Sans', Arial, sans-serif;
}

h1 {
  &, a, a:hover, a:active, a:visited {
    color: $main_color;
  }
}

em {
  font-style: normal;
  font-weight: bold;
  color: $main_color;
}

header {
  text-align: center;
  padding: 10px 0;
}

h2 {
  text-align: center;
}

#front {

  text-align: left;
  font-size: 16px;
  line-height: 25px;

  h1, h2, p {
    text-align: left;
    margin-bottom: 30px;
  }

  p {
    margin-bottom: 30px;
  }

  #front-sidebar {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    width: 400px;
    z-index: 10;
    background: white;
    padding-top: 40px;
    opacity: 0.95;
    filter: alpha(opacity=95);
    text-align: left;

    h1, p {
      padding: 0 40px;
    }
  }

  #front-contents {
    padding-top: 40px;
    padding-left: 400px;
    width: 600px;

    #map {
      width: 100%;
      height: 100%;
    }

    .map_container {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
    }

  }

  .map-balloon {
    padding: 10px;
    p {
      font-size: 14px;
      line-height: 20px;
      margin-bottom: 10px;
    }
    .thumbnails {
      width: 320px;
      margin: 0;
      li {
        margin: 5px;
        img {
          width: 75px;
          height: 75px;
        }
      }
    }
  }

}

#building {
  dd {
    margin-bottom: 20px;
  }
  .map_container {
    height: 300px;
    #map {
      height: 100%;
    }
  }
}

.status_message, .help-inline {
  color: #999;
}

footer {
  padding: 10px 0;
  text-align: center;
  a, a:hover, a:visited, a:active {
    color: gray;
  }
  p {
    margin: 5px 0px;
  }
}
